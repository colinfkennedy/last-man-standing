<div class="flex flex-col flex-grow rounded-xl  w-full shadow lg:max-w-2xl p-4 space-y-2 bg-charcoal">
  <div class="flex flex-row items-center">
    <Club @club={{@fixture.homeTeam}} class="text-left -ml-2" />
    <div class="flex flex-col flex-grow text-center text-gray-300">
        vs
    </div>
    <Club @club={{@fixture.awayTeam}} class="text-right flex-row-reverse -mr-2" />
  </div>
  <div class="flex flex-row items-center">
    <div class="flex flex-col flex-grow items-center">
      <div class="text-gray-400 uppercase font-light text-sm text-center">
        {{date-format @fixture.kickoff 'ddd DD MMM YYYY'}}<br>
        {{date-format @fixture.kickoff 'HH:mm'}}
      </div>
    </div>
  </div>
</div>
