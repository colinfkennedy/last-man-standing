<div class="flex flex-col flex-grow rounded-xl w-full shadow lg:max-w-2xl p-4 space-y-2 border">
  <div class="flex flex-row items-center">
    <Club @club={{@fixture.homeTeam}} class="text-left -ml-2" />
    {{#if @fixture.hasScore}}
      <div class="flex flex-col items-center w-1/3 space-y-1">
        <div class="uppercase font-light text-2xl lg:text-4xl text-center">
          {{@fixture.homeScore}} â€“ {{@fixture.awayScore}}
        </div>
      </div>
    {{else}}
      <div class="flex flex-col flex-grow text-xl lg:text-3xl text-center text-300">
        vs
      </div>
    {{/if}}

    <Club @club={{@fixture.awayTeam}} class="text-right flex-row-reverse -mr-2" />
  </div>
  <div class="flex flex-row items-center">
    <div class="flex flex-col flex-grow items-center">
      <div class="text-gray-500 uppercase font-light text-xs lg:text-sm text-center">
        {{date-format @fixture.kickoff 'ddd DD MMM YYYY'}}<br>
        {{date-format @fixture.kickoff 'HH:mm'}}
      </div>
    </div>
  </div>
</div>
