<div class="flex flex-col space-y-2">
  <div class="flex flex-col">
    <div class="text-center text-xl lg:text-2xl font-thin">
      SELECTIONS
    </div>

    <div class="flex flex-col items-center space-y-4 p-4">
      {{#each @babbers as |babber|}}
        <Gameweek::Selection @babber={{babber}} @gameweek={{@gameweek}} />
      {{/each}}
    </div>

    <div class="text-center text-xl lg:text-2xl font-thin">
      LOSERS
    </div>

    <div class="flex flex-col items-center space-y-4 p-4">
      {{#each @gameweek.losingTeams as |club|}}
        <Club @club={{club}} class="text-left -ml-2" />
      {{/each}}
    </div>

    <Gameweek::FixtureList @gameweek={{@gameweek}}/>
  </div>
</div>

