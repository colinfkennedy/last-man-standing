<div class='flex flex-col space-y-2'>
  <div class='flex flex-row justify-between px-4 mt-4 mb-4'>
    <select
      name='gameweek-selector'
      class='text-xs lg:text-base form-select min-w-max rounded-md border border-premPurple'
      {{on 'change' this.setGameweek}}
    >
      {{#each this.gameweeks as |gameweek|}}
        <option
          value={{gameweek.id}}
          selected={{if (eq gameweek this.currentGameweek) 'selected'}}
        >Gameweek {{gameweek.label}}</option>
      {{/each}}
    </select>
  </div>
  <div class='text-center text-xl lg:text-2xl font-thin pt-2'>
    Selections
  </div>

  <div class='flex flex-col items-center space-y-4 px-4 pt-4 pb-8'>
    {{#each this.currentGameweek.selectionsWithDefaults as |selection|}}
      <Gameweek::Selection @selection={{selection}} @adminMode={{true}} />
    {{/each}}
  </div>
</div>